<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Line?>
<?import javafx.scene.text.Font?>

<AnchorPane prefWidth="1260" prefHeight="700" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml"
            fx:controller="application.FileEncryptController">
    <children>
        <VBox alignment="CENTER" spacing="30"
              AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
              AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
            
            <VBox alignment="CENTER">
                <Label text="File Encryption" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: white;"/>
                <Line startX="0" startY="0" endX="200" endY="0" stroke="#00bfff" strokeWidth="3"/>
            </VBox>

            <VBox spacing="15" alignment="CENTER" maxWidth="500">
                <Label text="Encrypt sample files with your account." style="-fx-text-fill: white; -fx-font-size: 16px;"/>
                
                <HBox spacing="10" alignment="CENTER">
                    <Button fx:id="btnSelectFile" text="Select File" styleClass="glass-button" onAction="#handleSelectFile"/>
                    <Button fx:id="btnEncrypt" text="Encrypt" styleClass="glass-button" onAction="#handleEncrypt"/>
                    <Button fx:id="btnDecrypt" text="Decrypt" styleClass="glass-button" onAction="#handleDecrypt"/>
                </HBox>

                <TextArea fx:id="outputArea" editable="false" wrapText="true"
                          promptText="Encryption log will appear here..."
                          style="-fx-control-inner-background: #1a1a1a; -fx-text-fill: white; -fx-font-size: 14px;"
                          prefHeight="200" prefWidth="400"/>

                <Button text="Return to Menu" styleClass="glass-button" onAction="#handleReturn"/>
            </VBox>
        </VBox>
    </children>
</AnchorPane>
