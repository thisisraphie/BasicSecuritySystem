<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1"
            xmlns="http://javafx.com/javafx/24.0.1"
            fx:controller="application.AdminDashController"
            styleClass="signup-screen">

    <VBox alignment="TOP_CENTER" spacing="18.0"
          AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0"
          AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">

        <VBox prefHeight="40.0"/>

        <Label text="Admin Dashboard" styleClass="title"/>

        <HBox alignment="CENTER" spacing="24.0">

            <!-- User Form -->
            <VBox spacing="12.0" alignment="CENTER" maxWidth="360.0" styleClass="form-card">
                <Label text="User Management" styleClass="form-label" />
                <TextField fx:id="usernameField" promptText="Username" styleClass="signup-input" />
                <TextField fx:id="emailField" promptText="Email" styleClass="signup-input" />
                <PasswordField fx:id="passwordField" promptText="Password" styleClass="signup-input" />
                <HBox alignment="CENTER" spacing="12.0">
                    <Button fx:id="addButton" text="Add User" prefWidth="100.0" styleClass="signup-button" onAction="#handleAddUser" />
                    <Button fx:id="removeButton" text="Remove" prefWidth="100.0" styleClass="signup-button" onAction="#handleRemoveUser" />
                </HBox>
                <Button fx:id="toggleButton" text="Toggle Admin" prefWidth="220.0" styleClass="signup-button" onAction="#handleToggleAdmin" />
            </VBox>

            <!-- Existing Users List -->
            <VBox spacing="12.0" alignment="CENTER" maxWidth="360.0" styleClass="form-card">
                <Label text="Existing Users" styleClass="form-label"/>
                <ListView fx:id="userList" prefWidth="300.0" prefHeight="300.0"/>
            </VBox>

        </HBox>

        <VBox spacing="20.0" alignment="CENTER">
            <Button text="Return to Menu"
                    prefWidth="180.0"
                    styleClass="signup-button"
                    onAction="#handleReturn" />
            <Label text="Basic Security System"
                   style="-fx-text-fill: rgba(255,255,255,0.55); -fx-font-size: 13px;" />
        </VBox>

        <VBox prefHeight="40.0"/>
    </VBox>
</AnchorPane>
