<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1"
            xmlns="http://javafx.com/javafx/24.0.1"
            fx:controller="application.AdminDashController"
            styleClass="signup-screen">

    <VBox alignment="TOP_CENTER" spacing="18.0"
          AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0"
          AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">

        <VBox prefHeight="40.0"/>

        <!-- Header -->
        <Label text="Admin Dashboard" styleClass="title"/>

        <HBox alignment="CENTER" spacing="24.0">

            <!-- User Management Card -->
            <VBox spacing="12.0" alignment="CENTER" maxWidth="360.0" styleClass="form-card">
                <Label text="User Management" styleClass="form-label" />
                <TextField fx:id="usernameField" promptText="Username" styleClass="signup-input" />
                <TextField fx:id="emailField" promptText="Email" styleClass="signup-input" />
                <HBox alignment="CENTER" spacing="12.0">
                    <Button text="Add User" prefWidth="100.0" styleClass="signup-button" onAction="#handleAddUser" />
                    <Button text="Remove" prefWidth="100.0" styleClass="signup-button" onAction="#handleRemoveUser" />
                </HBox>
                <Button text="Toggle Admin" prefWidth="220.0" styleClass="signup-button" onAction="#handleToggleAdmin" />
            </VBox>

            <!-- Sample File Creation Card -->
            <VBox spacing="12.0" alignment="CENTER" maxWidth="360.0" styleClass="form-card">
                <Label text="Sample File Creation" styleClass="form-label" />
                <TextField fx:id="fileNameField" promptText="File Name" styleClass="signup-input" />
                <HBox alignment="CENTER" spacing="12.0">
                    <Button text="Generate File" prefWidth="100.0" styleClass="signup-button" onAction="#handleGenerateSample" />
                    <Button text="Decrypt File" prefWidth="100.0" styleClass="signup-button" onAction="#handleDecrypt" />
                </HBox>
            </VBox>
        </HBox>

        <VBox spacing="20.0" alignment="CENTER">
            <Button text="Return to Menu"
                    prefWidth="180.0"
                    styleClass="signup-button"
                    onAction="#handleReturn" />
            <Label text="Basic Security System"
                   style="-fx-text-fill: rgba(255,255,255,0.55); -fx-font-size: 13px;" />
        </VBox>

        <VBox prefHeight="40.0"/>
    </VBox>
</AnchorPane>
